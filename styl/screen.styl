pre code
	display: block
	background: #1d1f21
	color: #c5c8c6
	padding: 1em

pre code .coffeescript .javascript,
pre code .javascript .xml,
pre code .tex .formula,
pre code .xml .javascript,
pre code .xml .vbscript,
pre code .xml .css,
pre code .xml .cdata
	opacity: 0.5
